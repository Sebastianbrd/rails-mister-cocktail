<h1><%= @cocktail.name %></h1>

<div class="container">
  <ul>
    <%= cl_image_tag @cocktail.photo.key, height: 100, width: 200, crop: :fill %>
    <% @cocktail.doses.each do |dose| %>
      <li>
          <span><%= dose.description %></span>
          <span><%= dose.ingredient.name %></span>
          
          <span><%= link_to "🗑️", dose_path(dose), method: :delete, data: { confirm: "Delete this dosage?" } %></span>
      </li>
    <% end %>
  </ul>
</div>

 <div class="container">
  <%= link_to "Add new ingredients", new_cocktail_dose_path(@cocktail) %>
 </div>